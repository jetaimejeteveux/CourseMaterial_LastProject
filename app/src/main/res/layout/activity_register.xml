<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkRed"
    android:orientation="vertical">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/garuda2"
        android:layout_marginTop="16dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/garuda2"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/garuda2"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_1"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Register \nYourself Here!"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginTop="24dp"
            android:id="@+id/et_username_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:hint="Username"
            android:textColorHint="#000" />
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/et_asal_sekolah_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:hint="Asal Sekolah"
            android:textColorHint="#000" />
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/et_email_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:hint="Email"
            android:textColorHint="#000" />
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/et_pw_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:hint="Password"
            android:textColorHint="#000" />
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/et_confirm_pw_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:hint="Confirm Password"
            android:textColorHint="#000" />
        <LinearLayout
            android:layout_marginTop="4dp"
            android:id="@+id/ll_password_match_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your password is matched!"
                android:textColor="#000"/>
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_box_darkred_24dp"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#FFF"
            android:background="@drawable/shape_darkred"
            android:layout_marginTop="16dp"/>




    </LinearLayout>
</RelativeLayout>
